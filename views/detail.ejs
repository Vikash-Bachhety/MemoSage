        <h1 class="text-2xl lg:text-3xl md:text-4xl font-semibold text-center">
            <%= name.toUpperCase() %>
        </h1>
        <h3 class="text-xl bg-slate-300 bg-opacity-10 min-h-60 mt-4 w-full rounded-lg px-2 text-justify py-2 tracking-tight">
            <%= data%>
        </h3>
        <a class="mb-4 w-20 mx-auto mt-6 font-bold text-center py-2 px-4 rounded-md bg-red-500" href="/delete/<%= name%>">Delete</a>
    </div>
